<tool id="validation_empty_dataset" name="validation_empty_dataset">
  <command>
    echo "Hello World";
  </command>
  <inputs>
    <param name="input1" type="data" optional="true" label="non-empty input">
      <validator type="empty_dataset" />
    </param>
    <param name="input_mult" type="data" multiple="true" optional="true" label="non-empty input">
      <validator type="empty_dataset" />
    </param>
    <param name="input_collection" type="data_collection" collection_type="list:paired" optional="true" label="non-empty input">
      <validator type="empty_dataset" />
    </param>
  </inputs>
  <outputs>
    <data name="out_file1" from_work_dir="out1" />
  </outputs>
  <tests>
    <test expect_failure="true">
      <param name="input1" value="empty.txt"/>
    </test> 
    <test expect_failure="true">
      <param name="input_mult" value="1.bed,empty.txt"/>
    </test> 
    <test expect_failure="true">
      <param name="input_collection">
        <collection type="list:paired">
          <element name="i1">
            <collection type="paired">
              <element name="forward" value="1.bed" />
              <element name="reverse" value="empty.txt" />
            </collection>
          </element>
        </collection>
      </param>
    </test>
    <test>
      <param name="input1" value="1.bed"/>
      <param name="input_mult" value="1.bed,2.bed"/>
      <param name="input_collection">
        <collection type="list:paired">
          <element name="i1">
            <collection type="paired">
              <element name="forward" value="1.bed" />
              <element name="reverse" value="2.bed" />
            </collection>
          </element>
        </collection>
      </param>
      <assert_stdout>
        <has_text text="Hello World"/>
      </assert_stdout>
    </test> 
  </tests>
  <help>
  </help>
</tool>
