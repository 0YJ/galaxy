<tool id="column_param_optional_ref" name="Column Param with optional ref" version="1.0.0" profile="20.01">
    <command><![CDATA[
        echo $col_opt > '$output1' &&
        echo $col_mult_opt > '$output1'
    ]]></command>
    <inputs>
        <param name="input1" type="data" format="tabular" optional="true" label="Input 1" />
        <!-- verify that it is possible to have an optional column parameter 
             an specify no options-->
        <param name="col_opt" type="data_column" data_ref="input1" optional="true" label="Column to Use" />
        <param name="col_mult_opt" type="data_column" data_ref="input1" multiple="true" optional="true" label="Column to Use" />
    </inputs>
    <outputs>
        <data name="output1" format="tabular" />
    </outputs>
    <tests>
        <test>
            <output name="output1">
                <assert_contents>
                    <has_line line="None" />
                    <has_line line="" />
                </assert_contents>
            </output>
        </test>
    </tests>
</tool>
