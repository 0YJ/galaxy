                <assert_contents>
                    <has_text text="Goserelin"/>
                    <has_text text="OpenBabel"/>
                    <has_text text="$$$$"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help>
<![CDATA[
]]>
    </help>
</tool>
