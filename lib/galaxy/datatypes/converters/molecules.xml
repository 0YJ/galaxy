
<tool id="CONVERTER_molecules" name="OpenBabel converter for molecular formats" version="2.4.1">
    <description></description>
    <requirements>
        <requirement type="package" version="2.4.1">openbabel</requirement>
    </requirements>
    <command><![CDATA[
        obabel -i$input.ext '${input}' -o$__target_datatype__ -O '${output}' -e 2>&1
        && cp '$ext_config' 'galaxy.json'
    ]]></command>
    <configfiles>
        <configfile name="ext_config">{"output": {
  "name": "$input.name converted to $__target_datatype__",
  "ext": "$__target_datatype__"
}}</configfile>
    </configfiles>
    <inputs>
        <param name="input" type="data" format="cml,mol,mol2,sdf,smi" label="Molecules in CML, mol, mol2, sdf, smiles format"/>
        <param name="__target_datatype__" type="select" label="Target data type">
            <option value="cml"></option>
            <option value="inchi"></option>
            <option value="mol2"></option>
            <option value="sdf"></option>
        </param>
    </inputs>
    <outputs>
        <data name="output" format="auto"/>
    </outputs>
    <tests>
        <!-- to cml -->
        <test>
            <param name="input" ftype="inchi" value="drugbank_drugs.inchi"/>
            <param name="__target_datatype__" value="cml"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol" value="chebi_57262.v3k.mol"/>
            <param name="__target_datatype__" value="cml"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol2" value="drugbank_drugs.mol2"/>
            <param name="__target_datatype__" value="cml"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="sdf" value="drugbank_drugs.sdf"/>
            <param name="__target_datatype__" value="cml"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="smi" value="drugbank_drugs.smi"/>
            <param name="__target_datatype__" value="cml"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <!-- to inchi -->
        <test>
            <param name="input" ftype="cml" value="drugbank_drugs.cml"/>
            <param name="__target_datatype__" value="inchi"/>
            <output name="output" ftype="inchi">
                <assert_contents>
                    <has_text text="InChI="/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol" value="drugbank_drugs.mol"/>
            <param name="__target_datatype__" value="inchi"/>
            <output name="output" ftype="inchi">
                <assert_contents>
                    <has_text text="InChI="/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol2" value="drugbank_drugs.mol2"/>
            <param name="__target_datatype__" value="inchi"/>
            <output name="output" ftype="inchi">
                <assert_contents>
                    <has_text text="InChI="/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="sdf" value="drugbank_drugs.sdf"/>
            <param name="__target_datatype__" value="inchi"/>
            <output name="output" ftype="inchi">
                <assert_contents>
                    <has_text text="InChI="/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="smi" value="drugbank_drugs.smi"/>
            <param name="__target_datatype__" value="inchi"/>
            <output name="output" ftype="inchi">
                <assert_contents>
