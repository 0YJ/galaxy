            </output>
        </test>
        <test>
            <param name="input" ftype="smi" value="drugbank_drugs.smi"/>
            <param name="__target_datatype__" value="mol2"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="Goserelin"/>
