{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "es6",
        "baseUrl": ".",

        "paths": {
            "@/*": ["src/*"],
            "@tests/*": ["tests/*"]
        },
        "allowJs": true,
        "checkJs": false,

        "outDir": "./dist/build",
        "allowSyntheticDefaultImports": true
    },
    "vueCompilerOptions": {
        "target": 2.7
    },
    "include": ["./types/*.d.ts", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue", "./tests/**/*.ts"]
}
